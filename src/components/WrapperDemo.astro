---
import type { Props } from '../props'
import { formatDate } from '../logics'

const { entry: {
  link,
  date,
  video,
} } = Astro.props
---

<div>
  <a
    border="~ base rounded-lg"
    block
    of-hidden
    class="group"
    hover="scale-101 shadow-xl z-10"
    transition-all
    duration-500
    bg-base
    relative
    href={link}
    target="_blank"
  >
    {video && (
<video
  src={video}
  w-full
  autoplay
  loop
  muted
  playsinline
  border="b base"
/>
)}

    <div class="prose prose-sm m0 p4 pb3">
      <slot />
      <div op50 text-sm pt2>{ formatDate(date, false) }</div>
    </div>
  </a>
</div>
